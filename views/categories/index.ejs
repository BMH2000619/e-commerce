
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/cate.css">

<body class="d-flex flex-column min-vh-100" style="background: linear-gradient(135deg, #fffbe6 0%, #fdf6ee 100%); font-family: 'Inter', sans-serif;">
  <%- include('../partials/_navbar') %>
  <main class="flex-grow-1">
    <div class="container py-5">
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="font-family: 'Merriweather', serif; color: #000000; letter-spacing: 1px;">
          Shop by Category
        </h1>
      </div>
      <div class="row g-4 justify-content-center">
        <% categories.forEach(category => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch">
            <a href="/categories/<%= category._id %>" class="category-card w-100 text-center text-decoration-none shadow-sm p-4 rounded-4">
              <span class="fs-4 fw-bold" style="font-family: 'Merriweather', serif; color: #222;">
                <%= category.name %>
              </span>
            </a>
          </div>
        <% }) %>
      </div>
    </div>
  </main>
  <%- include('../partials/_footerbar') %>
</body>

