<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<link rel="stylesheet" href="/stylesheets/style.css">

<%- include('../partials/_navbar') %>

<div class="footerbottom">
  <div class="container py-5">
    <div class="row">
      <!-- img -->
      <div class="col-md-6 text-center mb-4 mb-md-0">
        <img src="/<%= product.img %>" alt="<%= product.name %>"class="img-fluid rounded shadow" style="max-height: 400px;">

            <div class="mt-3">
              <form method="POST" action="/carts/<%= cartId %>/user/<%= userId %>/items" class="d-flex justify-content-center align-items-center gap-2 mb-2">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <input type="number" name="quantity" value="1" min="1" max="<%= product.quantity %>" class="form-control" style="width: 80px;">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-cart-plus"></i> Add to Cart
            </button>
          </form>
        </div>
      </div>

      <!-- product info -->
      <div class="col-md-6">
        <h1 class="display-5 mb-3"><%= product.name %></h1>
        <h3 class="text-primary mb-3"><%= product.price %> BD</h3>
        <p class="mb-2"><strong>Category:</strong> <%= product.category ? product.category.name : 'No category' %></p>
        <p class="mb-2"><strong>Description:</strong> <%= product.description %></p>
        <p class="mb-4"><strong>Quantity Available:</strong> <%= product.quantity %></p>
      </div>


    </div>
  </div>

<%- include('../partials/_footerbar') %>


