<link rel="stylesheet" href="/stylesheets/style.css" />
<%- include('./partials/_navbar') %>
<br>

<div class="container py-5">
  <div class="row align-items-center">
    <div class="col-md-6 mb-4 mb-md-0">
      <h1 class="display-4 fw-bold mb-3">
        <%= user ? `Welcome back, ${user.username}!` : "Welcome to MongoMart!" %>
      </h1>

      <p class="lead text-muted mb-4">
        <%= user
          ? "Ready to buy or sell something new today?"
          : "Join our community to buy and sell items easily and securely." %>
      </p>
<br />
<div class="footerbottom">
<section class="welcome">
  <h1>
    <%= user ? `Welcome back, ${user.username}!` : "Welcome to MongoMart!" %>
  </h1>
  <p>
    <%= user ? "Ready to buy or sell something new today?" : "Join our community to buy and sell items easily and securely." %>
  </p>

      <% if (!user) { %>
        <a href="/auth/sign-up" class="btn btn-outline-dark">Sign Up Now</a>
        <a href="/auth/sign-in" class="btn btn-outline-dark">Sign In</a>
      <% } else { %>
        <a href="/products/new" class="btn btn-outline-dark">Sell Products</a>
        <a href="/products" class="btn btn-outline-dark">Browse Products</a>
      <% } %>
    </div>
      <div class="col-md-6 text-center">
      <img src="/uploads/shopping.gif" alt="Shopping Cat" class="img-fluid" style="max-width: 400px;">
    </div>
  </div>
</div>



  
</section>
</div>
<%- include('./partials/_footerbar') %>
