<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/stylesheets/style.css" />

<%- include('./partials/_navbar') %>
<br>

<div class="footerbottom">
  <div class="container py-5">
    <div class="row align-items-center">
      <div class="col-md-6 mb-4 mb-md-0">
        
        <h1 class="display-4 fw-bold mb-3">
        <%= user ? `Welcome, ${user.username}!` : "Welcome to MongoMart!" %>
        </h1>

        <p class="lead text-muted mb-4">
        <%= user
          ? "Ready to buy or sell something new today?"
          : "Join our community to buy and sell items easily and securely." %>
        </p>

        <% if (!user) { %>
          <a href="/auth/sign-up" class="btn btn-outline-secondary btn-lg">Sign Up Now</a>
          <a href="/auth/sign-in" class="btn btn-outline-secondary btn-lg">Sign In</a>
        <% } else { %>
          <a href="/products/new" class="btn btn-primary btn-lg me-2">Sell Products</a>
          <a href="/products" class="btn btn-outline-secondary btn-lg">Browse Products</a>
        <% } %>
      </div>

      <div class="col-md-6 text-center">
      <img src="/uploads/shopping.gif" alt="Shopping Cat" class="img-fluid" style="max-width: 400px;">
    </div>

</div>
</div>
</div>

<%- include('./partials/_footerbar') %>


